# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=coding_platform

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
SESSION_SECRET=your-session-secret

# Code Execution Limits
CODE_TIMEOUT=5000
MEMORY_LIMIT=128MB

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AI Scoring Configuration (Google Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
AI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent
AI_MODEL=gemini-pro
# Alternative: Use AI_API_KEY instead of GEMINI_API_KEY
