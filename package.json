{
  "name": "coding-platform",
  "version": "1.1.0",
  "description": "A complete coding assessment platform with multi-language support",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm start --workspace=frontend\"",
    "build": "npm run build --workspace=frontend",
    "start": "npm start --workspace=backend",
    "test": "npm test --workspace=frontend && npm test --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "coding",
    "assessment",
    "platform",
    "recruitment",
    "javascript",
    "python",
    "sql"
  ],
  "author": "Your Company",
  "license": "MIT"
}